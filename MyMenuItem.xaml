<MenuItem x:Class="ScreenDimmer.MyMenuItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ScreenDimmer" xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d"
          Height="40" Width="150" 
          HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
          VerticalAlignment="Center" HorizontalAlignment="Center">
    
    <StackPanel Orientation="Vertical">
        <Slider
            Width="200"
            Minimum="0"
            Maximum="100"
            Value="{Binding Brightness, Mode=TwoWay}"
            IsSnapToTickEnabled="True"
            TickFrequency="1"
            SmallChange="1"
            LargeChange="10">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="PreviewMouseWheel">
                    <i:InvokeCommandAction Command="{Binding SliderScrollCommand}" PassEventArgsToCommand="True" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Slider>
        <Label
            Content="{Binding Brightness, StringFormat='Brightness: {0:F1}'}"
            HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </StackPanel>
</MenuItem>
